@model GestionInventaireWebApp.Models.BDD.Article

@{
    ViewData["Title"] = "Details";
}

<h4>Details de l'article</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Nom :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Création :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
